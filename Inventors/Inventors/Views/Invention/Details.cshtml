@{
    var invention = (Invention)ViewData["Invention"];
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@invention.Name</h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text">Patent Date: @invention.PatentDate.Date.ToString("d")</p>
        <p class="card-text">Patent Number: @invention.PatentNumber</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
    <img class="card-img-bottom" src="@invention.Image" alt="Card image cap">
</div>