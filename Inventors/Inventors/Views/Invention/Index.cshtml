@{
    var inventions = (List<Invention>)ViewData["InventionsList"];
}

<div class="card-deck">

    @foreach (var invention in inventions)
    {
        <div class="card">
            <img class="card-img-top" src="@invention.Image" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@invention.Name</h5>
                <p class="card-text">Patent Date: @invention.PatentDate.Date</p>
                <p class="card-text">Patent Number: @invention.PatentNumber</p>
                @*<p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>*@
                <a href="Invention/Details/?id=@invention.Id">Read More</a>
            </div>
        </div>
    }
</div>

