@{
    var inventions = (List<Invention>)ViewData["InventionsList"];
}

<div class="container">
    <div class="row">

        @foreach (var invention in inventions)
        {
        <div class="col-lg-4 d-flex align-items-stretch">
            <div class="card">
                <div class="card-block">
                    <img class="card-img-top" src="@invention.Image" alt="Card image cap" height="200">
                    <div class="card-body">
                        <h5 class="card-title">@invention.Name</h5>
                        <p class="card-text">Patent Date: @invention.PatentDate.Date.ToString("d")</p>
                        <p class="card-text">Patent Number: @invention.PatentNumber</p>
                        @*<p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>*@
                        <a href="Invention/Details/?id=@invention.Id">Read More</a>
                    </div>
                </div>
                </div>
            </div>
                }
            </div>
        </div>
