@{
    var inventor = (Inventor)ViewData["Inventor"];
}


<div class="card mb-3">
    <img class="card-img-top" src="@inventor.Image" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@inventor.Name</h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text">@inventor.Nationality</p>
        <p class="card-text">@inventor.BirthDate</p>
        <p class="card-text">@inventor.DeathDate</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
</div>
